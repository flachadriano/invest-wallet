    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "vitest": "^0.29.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
